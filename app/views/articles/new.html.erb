<h1>New Article</h1>

<%= form_for([@category, @category.articles.build]) do |f| %>
<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :description %>
  <%= f.text_field :description %>
</p>

<p>
  <%= f.label :email %>
  <%= f.email_field :email %>
</p>

<p>
  <%= f.label :price %>
  <%= f.number_field :price, step: :any %>
</p>

<p>
  <%= f.submit %>
</p>


<% end %>
